<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Trackit.ViewModels"
             xmlns:microcharts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             xmlns:local="clr-namespace:Trackit.Converters"
             x:Class="Trackit.Screens.Detail"
             Title="{Binding Name}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout Padding="20" Spacing="10">

        <ActivityIndicator IsVisible="{Binding IsBusy}" 
                               IsRunning="{Binding IsBusy}" 
                               Color="Blue"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
            <Button Text="âž•" Command="{Binding AddValueCommand}" Margin="0,0,5,0"/>
            <Button Text="ðŸ”" Command="{Binding NavigateToValuesCommand}" Margin="0,0,5,0"/>
            <Button Text="ðŸ—‘ï¸" Command="{Binding DeleteTrackerCommand}" Margin="0,0,5,0"/>
            <Button Text="Settings" Command="{Binding NavigateToSettingsCommand}"/>
        </StackLayout>

        <StackLayout Spacing="10">
            <microcharts:ChartView Chart="{Binding Chart}" HeightRequest="300"/>
            <Label Text="{Binding NoDataMessage}"
                   IsVisible="{Binding Chart, Converter={StaticResource NullToBooleanConverter}}"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"
                   FontSize="Medium"
                   TextColor="Gray"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
